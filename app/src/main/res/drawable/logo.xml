<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the border -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#00000000"/> <!-- transparent color -->
            <stroke android:width="2dp" android:color="@color/dark_green"/> <!-- border color and width -->
        </shape>
    </item>
    <!-- Define the image -->
    <item
        android:drawable="@mipmap/ic_launcher_foreground"
        android:width="110dp"
        android:height="110dp">
        <shape android:shape="oval">
            <solid android:color="#00000000"/> <!-- transparent color -->
        </shape>
    </item>
</layer-list>