<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    tools:context=".user.Signup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gupter_bold"
            android:text="Create an Account"
            android:textAlignment="center"
            android:layout_marginBottom="18dp"
            android:textSize="26sp" />

        <TextView
            android:layout_width="match_parent"
            android:textSize="@dimen/ed_text_size"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gupter_bold"
            android:textFontWeight="800"
            android:text="Name:"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRegisterFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter your name"
            android:padding="@dimen/edit_text_padding"
            android:layout_marginBottom="@dimen/ed_margin_bottom"
            android:background="@drawable/edit_text_border"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:maxLines="1" />

        <TextView
            android:layout_width="match_parent"
            android:textSize="@dimen/ed_text_size"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gupter_bold"
            android:textFontWeight="800"
            android:text="Email"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRegisterEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter email"
            android:padding="@dimen/edit_text_padding"
            android:layout_marginBottom="@dimen/ed_margin_bottom"
            android:background="@drawable/edit_text_border"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:maxLines="1" />


        <TextView
            android:layout_width="match_parent"
            android:textSize="@dimen/ed_text_size"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gupter_bold"
            android:textFontWeight="800"
            android:text="Username:"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRegisterUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="username"
            android:padding="@dimen/edit_text_padding"
            android:layout_marginBottom="@dimen/ed_margin_bottom"
            android:background="@drawable/edit_text_border"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:maxLines="1" />

        <TextView
            android:layout_width="match_parent"
            android:textSize="@dimen/ed_text_size"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gupter_bold"
            android:textFontWeight="800"
            android:text="Address:"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRegisterAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/edit_text_padding"
            android:layout_marginBottom="@dimen/ed_margin_bottom"
            android:background="@drawable/edit_text_border"
            android:hint="enter full adrress"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:maxLines="1" />

        <TextView
            android:layout_width="match_parent"
            android:textSize="@dimen/ed_text_size"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gupter_bold"
            android:textFontWeight="800"
            android:text="City:"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRegisterCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="city"
            android:padding="@dimen/edit_text_padding"
            android:layout_marginBottom="@dimen/ed_margin_bottom"
            android:background="@drawable/edit_text_border"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:maxLines="1" />

        <TextView
            android:layout_width="match_parent"
            android:textSize="@dimen/ed_text_size"
            android:fontFamily="@font/gupter_bold"
            android:textFontWeight="800"
            android:layout_height="wrap_content"
            android:text="Password:"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRegisterPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            android:imeOptions="actionDone"
            android:padding="@dimen/edit_text_padding"
            android:layout_marginBottom="@dimen/ed_margin_bottom"
            android:background="@drawable/edit_text_border"
            android:singleLine="true"
            android:maxLines="1" />

        <TextView
            android:layout_width="match_parent"
            android:textSize="@dimen/ed_text_size"
            android:fontFamily="@font/gupter_bold"
            android:textFontWeight="800"
            android:layout_height="wrap_content"
            android:text="Confirm Password:"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="confirm password"
            android:padding="@dimen/edit_text_padding"
            android:layout_marginBottom="@dimen/ed_margin_bottom"
            android:background="@drawable/edit_text_border"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:maxLines="1" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            style="@style/LoginButton" />

        <TextView
            android:id="@+id/tvAlreadyHaveAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Already have an account? Log in here"
            android:textAlignment="center" />
    </LinearLayout>
</ScrollView>