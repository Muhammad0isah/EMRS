<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude: "
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude: "
        app:layout_constraintTop_toBottomOf="@id/tv_longitude"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_altitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altitude: "
        app:layout_constraintTop_toBottomOf="@id/tv_latitude"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accuracy: "
        app:layout_constraintTop_toBottomOf="@id/tv_altitude"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City Name: "
        app:layout_constraintTop_toBottomOf="@id/tv_accuracy"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_full_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Address: "
        app:layout_constraintTop_toBottomOf="@id/tv_city_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_country_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country Code: "
        app:layout_constraintTop_toBottomOf="@id/tv_full_address"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_country_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country Name: "
        app:layout_constraintTop_toBottomOf="@id/tv_country_code"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>